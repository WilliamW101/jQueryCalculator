<h1 class='text-center'> jQuery Calculator </h1>
<br /> <br />

<!-- Calculator HTML -->
<div id='calculator' class='container'>

  <div id='calculator-screen' class='col-sm-12'>
  </div>

  <div class='row'>
    <button class='btn btn-default col-sm-3 num-btn'>7</button>
    <button class='btn btn-default col-sm-3 num-btn'>8</button>
    <button class='btn btn-default col-sm-3 num-btn'>9</button>
    <button class='btn btn-default col-sm-3 op-btn'>/</button>
  </div>

  <div class='row'>
    <button class='btn btn-default col-sm-3 num-btn'>4</button>
    <button class='btn btn-default col-sm-3 num-btn'>5</button>
    <button class='btn btn-default col-sm-3 num-btn'>6</button>
    <button class='btn btn-default col-sm-3 op-btn'>x</button>
  </div>

  <div class='row'>
    <button class='btn btn-default col-sm-3 num-btn'>1</button>
    <button class='btn btn-default col-sm-3 num-btn'>2</button>
    <button class='btn btn-default col-sm-3 num-btn'>3</button>
    <button class='btn btn-default col-sm-3 op-btn'>-</button>
  </div>

  <div class='row'>
    <button class='btn btn-default col-sm-3 num-btn'>0</button>
    <button class='btn btn-default col-sm-3 num-btn'>.</button>
    <button class='btn btn-default col-sm-3 op-btn'>+</button>
    <button id='equal-btn' class='btn btn-default col-sm-3'> =</button>
  </div>

</div>
